<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="searchViewStyle">@style/SearchViewTheme</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <!--The style for rhe search view-->
    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/white</item>
        <item name="submitBackground">@android:color/white</item>
        <item name="searchIcon">@drawable/ic_action_search</item>
        <item name="closeIcon">@drawable/ic_action_name</item>
        <item name="android:background">@android:color/white</item>
    </style>



</resources>
